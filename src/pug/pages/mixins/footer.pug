mixin footer(options)

    footer.footer.pt-10.pb-5.mt-auto(class=options.footerBg, class=options.footerStyle)

        if block
            block
        else
            .container
                .row
                    .col-lg-3
                        .footer-brand
                            img(src="assets/img/ThinkHalcyonLogo_White.svg", alt="Think Halcyon logo")
                            <br />
                        .mb-3 Where beauty meets function
