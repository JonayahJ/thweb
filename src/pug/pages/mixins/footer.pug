    footer.footer.pt-10.pb-5.mt-auto(class=options.footerBg, class=options.footerStyle)

        if block
            block
        else
            .container
                .row
                    .col-lg-3
                        .footer-brand
                            | Think Halcyon 
                            //- Insert logo
                        .mb-3 Build beautiful, functional websites
                        .icon-list-social.mb-5
